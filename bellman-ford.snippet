	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>bellman_ford</Title>
			<Shortcut>BellmanFord</Shortcut>
		</Header>
		<Snippet>
			<Code Language="cpp">
        <![CDATA[bool bellman_ford(Graph& g, Array &d, int s)
{
	fill(ALL(d), INF);
	d[s] = 0;
	int cnt = 0;
	while(1)
	{
		if(cnt > g.size()) return false;
		cnt++;
		bool update = false;
		REP(i, g.size())REP(j,g[i].size())
		{
			Edge e = g[i][j];
			if(d[e.from] != INF && d[e.to] > d[e.from] + e.cost)
			{
				d[e.to] = d[e.from] + e.cost;
				update = true;
			}
		}
		if(!update) break;
	}
	return true;
}
$end$ ]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
